{% set php_version = constant('PHP_VERSION') %}

{% if php_version starts with '5.4' %}
<div class="g-grid">
    <div class="g-block alert alert-warning g-php-outdated">
        {{ 'GANTRY5_PLATFORM_PHP54_WARNING'|trans(php_version)|raw }}
    </div>
</div>
{% endif %}


{% block stylesheets %}
<style>
#g5-container .g5-dialog.g5-dialog-theme-default .g5-content { width: 90% !important; }
#g5-container .settings-block textarea {min-height: 300px !important;}
#g5-container .g5-dialog.g5-dialog-theme-default .g-modal-actions {text-align: left !important;}
</style>
{% endblock %}