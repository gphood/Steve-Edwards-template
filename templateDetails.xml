<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<extension version="3.9" type="template" client="site" method="upgrade">
    <name>smallschools</name>
    <version>1.0.0</version>
    <creationDate>2025</creationDate>
    <author>Grant Hood</author>
    <authorEmail>info@granthood.co.uk</authorEmail>
    <authorUrl>https://www.granthood.co.uk</authorUrl>
    <copyright>(C) 2023 Grant Hood. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPLv2</license>
    <description>A Gantry template for the Small Schools website</description>

    <scriptfile>install.php</scriptfile>

    <files>
        <folder>admin</folder>
        <folder>blueprints</folder>
        <folder>config</folder>
        <folder>custom</folder>
        <folder>fields</folder>
        <folder>fonts</folder>
        <folder>gantry</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>includes</folder>
        <folder>install</folder>
        <folder>js</folder>
        <folder>language</folder>
        <folder>layouts</folder>
        <folder>particles</folder>
        <folder>scss</folder>
        <file>component.php</file>
        <file>config.ini</file>
        <file>error.php</file>
        <file>favicon.ico</file>
        <file>generate-css.sh</file>
        <file>index.php</file>
        <file>install.php</file>
        <file>offline.php</file>
        <file>package-lock.json</file>
        <file>template_preview.png</file>
        <file>template_thumbnail.png</file>
        <file>templateDetails.xml</file>
    </files>

    <positions>
        <position>debug</position>
    </positions>

    <config>
        <fields name="params" addfieldpath="/templates/smallschools/fields">
            <fieldset name="advanced">
                <field name="warning" type="warning"/>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="Small Schools Template">https://updates.granthood.co.uk/tmpl-smallschools/updates.xml</server>
    </updateservers>

</extension>
